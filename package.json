        "laravel-vite-plugin": "^1.0.0",
        "postcss": "^8.4.32",
        "tailwindcss": "^3.3.6",
        "vite": "^5.0.10"
    },
    "dependencies": {
        "chart.js": "^4.4.0",
        "flatpickr": "^4.6.13",
        "sortablejs": "^1.15.0"
    }
}